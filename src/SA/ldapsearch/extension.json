{
    "name": "LDAP Search (SA)",
    "version": "0.0.0",
    "command_name": "sa-ldapsearch",
    "extension_author": "moloch--",
    "original_author": "TrustedSec",
    "repo_url": "https://github.com/sliverarmory/CS-Situational-Awareness-BOF",
    "help": "Executes LDAP searches",
    "depends_on": "coff-loader",
    "entrypoint": "go",
    "files": [
        {
            "os": "windows",
            "arch": "amd64",
            "path": "ldapsearch.x64.o"
        },
        {
            "os": "windows",
            "arch": "386",
            "path": "ldapsearch.x86.o"
        }
    ],
    "arguments": [
        {
            "name": "query",
            "desc": "LDAP filter query",
            "type": "string",
            "optional": false
        },
        {
            "name": "attributes",
            "desc": "Comma separated attributes to return",
            "type": "string",
            "optional": true
        },
        {
            "name": "results_count",
            "desc": "Limit number of results (0 = unlimited)",
            "type": "integer",
            "optional": true
        },
        {
            "name": "scope",
            "desc": "Search scope: 1=BASE, 2=ONELEVEL, 3=SUBTREE",
            "type": "integer",
            "optional": true
        },
        {
            "name": "hostname",
            "desc": "DC hostname or IP",
            "type": "string",
            "optional": true
        },
        {
            "name": "domain",
            "desc": "Distinguished Name for search base",
            "type": "string",
            "optional": true
        },
        {
            "name": "ldaps",
            "desc": "Use LDAPS (1) or LDAP (0)",
            "type": "integer",
            "optional": true
        }
    ]
}
